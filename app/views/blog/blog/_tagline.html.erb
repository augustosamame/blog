<% post.tags.each_with_index do |tag, index| %>
  <% if index == post.tags.size - 1 %>
    <%= link_to tag.name, blog_index_path(:action => :index, :tag => tag.name) %>
  <% else %>
    <%= link_to tag.name, blog_index_path(:action => :index, :tag => tag.name) %><%= separator %>
  <% end %>
<% end %>
