<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Post image</th>
      <th>Body</th>
      <th>User</th>
      <th>Status</th>
      <th>Post type</th>
      <th>Post public</th>
      <th>Post published</th>
      <th>Numcomments</th>
      <th>Publication date</th>
      <th>Author</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.post_image %></td>
        <td><%= post.body %></td>
        <td><%= post.user %></td>
        <td><%= post.status %></td>
        <td><%= post.post_type %></td>
        <td><%= post.post_public %></td>
        <td><%= post.post_published %></td>
        <td><%= post.numComments %></td>
        <td><%= post.publication_date %></td>
        <td><%= post.author %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
